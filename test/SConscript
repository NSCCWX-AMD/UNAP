import GLOVAR as gl

Import('env')

env_local = env.Clone()

env_local.Prepend(LIBS = ['unap'])
env_local.Append(LIBPATH = [gl.build_path + '/lib'])
env_local.Append(LIBS = ['stdc++'])

linker_bin_path = '/home/export/online1/amd_dev1/software/MPICH/bin'

cxxfile = ['ex11.cpp']

fortranfile = ['ex12f.f90']

env_local.Program(gl.build_path + '/bin/ex11', source = cxxfile, LINK=linker_bin_path + '/mpicxx')

env_local.Program(gl.build_path + '/bin/ex12f', source = fortranfile, LINK=linker_bin_path + '/mpifort')